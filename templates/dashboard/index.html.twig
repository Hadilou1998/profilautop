{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="mb-6 text-4xl font-bold">Tableau de bord</h1>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        {% for jobOffer in jobOffers %}
            <div class="p-6 bg-white rounded-lg shadow">
                <h3 class="text-xl font-semibold">{{ jobOffer.title }}</h3>
                <p class="text-gray-600">{{ jobOffer.company }}</p>
                <p class="mt-2">{{ jobOffer.status }}</p>
                <a href="{{ path('job_offer_show', {'id': jobOffer.id}) }}" class="inline-block mt-4 text-blue-500">Voir la candidature</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
        <h2 class="mb-6 text-2xl font-bold text-center">Connexion</h2>

        {{ form_start(loginForm) }}
        <div class="mb-4">
            {{ form_label(loginForm.email) }}
            {{ form_widget(loginForm.email, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(loginForm.email) }}
        </div>
        <div class="mb-6">
            {{ form_label(loginForm.password) }}
            {{ form_widget(loginForm.password, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(loginForm.password) }}
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700">
                Se connecter
            </button>
        </div>
        {{ form_end(loginForm) }}

        <div class="mt-4 text-center">
            <a href="#" class="text-sm text-blue-600 hover:underline">Mot de passe oubli√© ?</a>
        </div>
    </div>
</div>
{% endblock %}
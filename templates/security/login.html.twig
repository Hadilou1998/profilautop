{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container max-w-md p-6 mx-auto mt-10 bg-white rounded-lg shadow">
    <h2 class="mb-6 text-3xl font-semibold text-center">Connexion</h2>
    <form action="{{ path('app_login') }}" method="post">
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" name="_username" id="email" required class="w-full p-3 mt-1 border border-gray-300 rounded">
        </div>
        <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
            <input type="password" name="_password" id="password" required class="w-full p-3 mt-1 border border-gray-300 rounded">
        </div>
        <button type="submit" class="w-full py-3 text-white bg-blue-500 rounded-lg">Se connecter</button>
    </form>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Suivi des Candidatures{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="mb-10 text-3xl font-bold text-center">Suivi des Candidatures</h1>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
        {% for status, offers in kanban %}
            <div class="p-4 bg-gray-100 rounded-lg shadow-md">
                <h2 class="mb-4 text-xl font-semibold">{{ status }}</h2>
                <div class="space-y-4">
                    {% for offer in offers %}
                        <div class="p-4 bg-white border-l-4 border-blue-500 rounded-lg shadow-sm">
                            <h3 class="font-bold text-gray-800">{{ offer.title }}</h3>
                            <p class="text-sm text-gray-600">{{ offer.company }}</p>
                            <a href="{{ path('job_offer_show', { id: offer.id }) }}" class="text-sm text-blue-500 hover:underline">Voir DÃ©tails</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

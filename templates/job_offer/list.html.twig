{% extends 'base.html.twig' %}

{% block title %}Offres d'Emploi{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-4">Liste des Offres d'Emploi</h1>
    
    <table class="min-w-full bg-white border border-gray-300">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Titre</th>
                <th class="py-2 px-4 border-b">Entreprise</th>
                <th class="py-2 px-4 border-b">Lieu</th>
                <th class="py-2 px-4 border-b">Statut</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for job in jobOffers %}
            <tr class="hover:bg-gray-100">
                <td class="py-2 px-4 border-b">{{ job.title }}</td>
                <td class="py-2 px-4 border-b">{{ job.company }}</td>
                <td class="py-2 px-4 border-b">{{ job.location }}</td>
                <td class="py-2 px-4 border-b">{{ job.status }}</td>
                <td class="py-2 px-4 border-b">
                    <a href="{{ path('job_offer_show', {'id': job.id}) }}" class="text-blue-500 hover:underline">Voir</a>
                    <a href="{{ path('job_offer_edit', {'id': job.id}) }}" class="text-yellow-500 hover:underline">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center py-4">Aucune offre d'emploi disponible.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
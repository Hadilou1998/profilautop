{% extends 'base.html.twig' %}

{% block title %}Offres d'Emploi{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="mb-6 text-3xl font-bold">Mes Offres d'Emploi</h1>
    <a href="{{ path('job_offer_new') }}" class="px-6 py-3 text-white bg-green-500 rounded-lg">Ajouter une nouvelle offre</a>
    <div class="mt-6">
        <table class="min-w-full overflow-hidden bg-white rounded-lg">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-6 py-4">Titre</th>
                    <th class="px-6 py-4">Entreprise</th>
                    <th class="px-6 py-4">Statut</th>
                    <th class="px-6 py-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for jobOffer in jobOffers %}
                    <tr class="border-t">
                        <td class="px-6 py-4">{{ jobOffer.title }}</td>
                        <td class="px-6 py-4">{{ jobOffer.company }}</td>
                        <td class="px-6 py-4">{{ jobOffer.status }}</td>
                        <td class="px-6 py-4">
                            <a href="{{ path('job_offer_show', {'id': jobOffer.id}) }}" class="text-blue-500">Voir</a>
                            <a href="{{ path('job_offer_edit', {'id': jobOffer.id}) }}" class="ml-4 text-yellow-500">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
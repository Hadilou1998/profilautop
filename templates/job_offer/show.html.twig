{% extends 'base.html.twig' %}

{% block title %}DÃ©tails de l'Offre d'Emploi{% endblock %}

{% block body %}
    <h1>{{ jobOffer.title }}</h1>
    
    <p><strong>Entreprise :</strong> {{ jobOffer.company }}</p>
    <p><strong>Lieu :</strong> {{ jobOffer.location }}</p>
    <p><strong>Statut :</strong> {{ jobOffer.status }}</p>
    <p><strong>Date de candidature :</strong> {{ jobOffer.applicationDate|date('Y-m-d') }}</p>
    
    <a href="{{ path('job_offer_edit', { 'id': jobOffer.id }) }}" class="btn btn-warning">Modifier</a>
    
    <form action="{{ path('job_offer_delete', { 'id': jobOffer.id }) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jobOffer.id) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>
{% endblock %}